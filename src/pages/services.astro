<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    // Get all FAQ toggle buttons
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    // Add click event listener to each toggle button
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        // Get the content element that follows this toggle
        const content = toggle.nextElementSibling;
        
        // Get the icon element within this toggle
        const icon = toggle.querySelector('.faq-icon');
        
        // Toggle the hidden class on the content
        content.classList.toggle('hidden');
        
        // Rotate the icon when expanded
        if (content.classList.contains('hidden')) {
          icon.classList.remove('rotate-180');
        } else {
          icon.classList.add('rotate-180');
        }
      });
    });
    
    // Testimonial carousel functionality
    const slider = document.getElementById('reviews-slider');
    const prevButton = document.getElementById('prev-review');
    const nextButton = document.getElementById('next-review');
    
    if (slider && prevButton && nextButton) {
      let currentSlide = 0;
      const slides = slider.querySelectorAll('div.w-full.md\\:w-1\\/3');
      const slideCount = slides.length;
      
      // Function to update the slider position
      const updateSlider = () => {
        // On mobile, show one slide at a time
        if (window.innerWidth < 768) {
          slider.style.transform = `translateX(-${currentSlide * 100}%)`;
        } else {
          // On desktop, show 3 slides at a time
          slider.style.transform = `translateX(-${currentSlide * 33.333}%)`;
        }
      };
      
            // Event listeners for next and previous buttons
            nextButton.addEventListener('click', () => {
        if (window.innerWidth < 768) {
          // On mobile, move one slide at a time
          currentSlide = (currentSlide + 1) % slideCount;
        } else {
          // On desktop, ensure we don't go past the last set of 3 slides
          currentSlide = Math.min(currentSlide + 1, slideCount - 3);
        }
        updateSlider();
      });
      
      prevButton.addEventListener('click', () => {
        if (window.innerWidth < 768) {
          // On mobile, move one slide at a time with wrap-around
          currentSlide = (currentSlide - 1 + slideCount) % slideCount;
        } else {
          // On desktop, ensure we don't go before the first slide
          currentSlide = Math.max(currentSlide - 1, 0);
        }
        updateSlider();
      });
      
      // Update slider on window resize
      window.addEventListener('resize', updateSlider);
      
      // Initialize slider
      updateSlider();
    }
  });
</script>