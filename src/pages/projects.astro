---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Fashion Boutique Redesign',
    description: 'Complete redesign of a Shopify store for a fashion boutique, resulting in a 40% increase in sales.',
    image: '/images/project-1.jpg',
    tags: ['Shopify', 'Theme Development', 'UI/UX'],
    client: 'Style Haven',
    year: '2023'
  },
  {
    title: 'Inventory Management App',
    description: 'Custom Shopify app for automated inventory management and stock alerts for an outdoor gear retailer.',
    image: '/images/project-2.jpg',
    tags: ['Shopify App', 'Node.js', 'React'],
    client: 'Outdoor Gear Shop',
    year: '2022'
  },
  {
    title: 'Multi-channel Integration',
    description: 'Integration of Shopify with multiple sales channels and marketplaces for a home goods brand.',
    image: '/images/project-3.jpg',
    tags: ['API Integration', 'Shopify', 'Multi-channel'],
    client: 'Home Essentials Co.',
    year: '2022'
  },
  {
    title: 'Custom Checkout Experience',
    description: 'Development of a custom checkout flow to improve conversion rates for a luxury jewelry brand.',
    image: '/images/project-4.jpg',
    tags: ['Shopify Plus', 'Checkout Customization', 'Conversion Optimization'],
    client: 'Luxury Gems',
    year: '2021'
  },
  {
    title: 'Subscription Box Service',
    description: 'Implementation of a subscription box service with recurring billing for a specialty food company.',
    image: '/images/project-5.jpg',
    tags: ['Shopify', 'Subscription', 'ReCharge Integration'],
    client: 'Gourmet Monthly',
    year: '2021'
  },
  {
    title: 'International E-commerce Expansion',
    description: 'Expansion of a Shopify store to support multiple currencies, languages, and international shipping.',
    image: '/images/project-6.jpg',
    tags: ['Shopify', 'Internationalization', 'Multi-currency'],
    client: 'Global Trends',
    year: '2020'
  }
];
---

<Layout title="Projects | Morshad Unnur - Shopify Developer" description="Portfolio of Shopify development projects including custom theme development, app integration, and e-commerce solutions.">
  <div class="bg-gradient-to-r from-primary to-secondary text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">Projects</h1>
      <p class="text-xl">A showcase of my Shopify development work and e-commerce solutions.</p>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-md">
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded">{tag}</span>
              ))}
            </div>
            <div class="flex justify-between text-sm text-gray-500">
              <p>Client: {project.client}</p>
              <p>Year: {project.year}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>