---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import project1Image from '../assets/images/project-1.jpg';
import project2Image from '../assets/images/project-2.jpg';
import project3Image from '../assets/images/project-3.jpg';
import project4Image from '../assets/images/project-4.jpg';

const projects = [
  {
    title: 'Baby Shop Redesign',
    description: 'Complete redesign of a Shopify store for a kids brand shop, resulting in a 40% increase in sales.',
    image: project1Image,
    tags: ['Shopify', 'Theme Development', 'UI/UX'],
    client: 'Gearbee Baby',
    year: '2024'
  },
  {
    title: 'Inventory Management App',
    description: "Facebook Messenger, designed to revolutionize your customer communication and enhance your online store's performance. Seamlessly integrating power of Facebook Messenger Chat into your store.",
    image: project2Image,
    tags: ['Shopify App', 'Node.js', 'React'],
    client: 'Qbytesoft',
    year: '2023'
  },
  {
    title: 'COD Form & Upsell â€‘ CodMonstern',
    description: 'Supercharge your cash-on-delivery store with CodMonster! Enjoy a fast shopping experience with our 1-click customizable COD form. Boost your Average Order Value (AOV) through smart Upsell and Cross-Sell offers while recovering abandoned carts.',
    image: project3Image,
    tags: ['API Integration (GraphQL)', 'Shopify', 'Multi-channel' ,'Laravel, React'],
    client: 'Appstack LLC',
    year: '2025'
  },
  {
    title: 'AutoGarage Pro',
    description: 'Autogarage Pro is a platform that connects car owners, garages, insurers and spares suppliers to transform the automotive service experience. It offers comprehensive and customisable solutions for garage managemen',
    image: project4Image,
    tags: ['Laravel', 'Automobiles', 'CRM' ,'Automation'],
    client: 'Autoxpress',
    year: '2023'
  },
];
---

<Layout title="Projects | Morshad Unnur - Shopify Developer" description="Portfolio of Shopify development projects including custom theme development, app integration, and e-commerce solutions.">
  <div class="bg-gradient-to-r from-primary to-secondary text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 mt-8">Projects</h1>
      <p class="text-xl">A showcase of my Shopify development work and e-commerce solutions.</p>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-md">
          {/* <img src={project.image} alt={project.title} class="w-full h-48 object-cover" /> */}
          <Image src={project.image} alt={project.title} class="w-full h-48 object-cover" loading="eager" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded">{tag}</span>
              ))}
            </div>
            <div class="flex justify-between text-sm text-gray-500">
              <p>Client: {project.client}</p>
              <p>Year: {project.year}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Project CTA Section -->
    <div class="mt-16 bg-gray-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Have a project in mind?</h2>
      <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
        Let's collaborate to create a custom Shopify solution that meets your business needs and drives results.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
        Let's discuss your project
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</Layout>