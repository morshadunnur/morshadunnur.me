import Layout from '../layouts/Layout.astro';

// This will handle the form submission
const formSubmitted = Astro.request.method === 'POST';
let formStatus = '';

if (formSubmitted) {
  try {
    const formData = await Astro.request.formData();
    const name = formData.get('name');
    const email = formData.get('email');
    const subject = formData.get('subject');
    const message = formData.get('message');
    
    // Google Sheets submission
    // Replace with your actual Google Sheets script URL
    const googleScriptUrl = 'https://script.google.com/macros/s/YOUR_GOOGLE_SCRIPT_ID/exec';
    
    // Discord webhook
    // Replace with your actual Discord webhook URL
    const discordWebhookUrl = 'https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN';
    
    // Send to Google Sheets
    const googleResponse = await fetch(googleScriptUrl, {
      method: 'POST',
      body: JSON.stringify({
        name,
        email,
        subject,
        message,
        timestamp: new Date().toISOString()
      }),
      headers: {
        'Content-Type': 'application/json'
      }
    });
    
    // Send to Discord
    const discordResponse = await fetch(discordWebhookUrl, {
      method: 'POST',
      body: JSON.stringify({
        content: `New contact form submission!`,
        embeds: [{
          title: `${subject}`,
          description: `${message}`,
          color: 5814783, // Teal color
          fields: [
            {
              name: 'Name',
              value: `${name}`,
              inline: true
            },
            {
              name: 'Email',
              value: `${email}`,
              inline: true
            },
            {
              name: 'Timestamp',
              value: new Date().toLocaleString(),
              inline: false
            }
          ]
        }]
      }),
      headers: {
        'Content-Type': 'application/json'
      }
    });
    
    if (googleResponse.ok && discordResponse.ok) {
      formStatus = 'success';
    } else {
      formStatus = 'error';
    }
  } catch (error) {
    console.error('Error submitting form:', error);
    formStatus = 'error';
  }
}
