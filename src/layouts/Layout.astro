import Header from '../components/Header.astro';
import MobileNav from '../components/MobileNav.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Morshadun Nur - Shopify Developer specializing in Shopify Store Design, Shopify App development and e-commerce solutions" } = Astro.props;
// SEO Keywords
const keywords = "Top Apps Developer for Shopify,Shopify Developer, Web Developer, Full Stack Developer, Remote Work, Freelance Developer, Shopify Expert, E-commerce Developer, Shopify Store Setup, Shopify Theme Customization, Shopify App Development, Best Shopify Experts in Bangladesh";

// JSON-LD Structured Data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Morshadun Nur - Shopify Developer",
  "description": description,
  "image": "/images/og-image.jpg",
  "url": "https://morshadunnur.me",
  "telephone": "+8801611032464",
  "email": "me@morshadunnur.me",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "Bangladesh"
  },
  "priceRange": "$$",
  "sameAs": [
    "https://github.com/morshadunnur",
    "https://www.linkedin.com/in/morshadunnur/",
    "https://twitter.com/morshadunnur"
  ],
  "offers": [
    {
      "@type": "Offer",
      "name": "Shopify Store Setup",
      "description": "Custom Shopify store setup and development tailored to your brand and business needs."
    },
    {
      "@type": "Offer",
      "name": "Shopify App Development",
      "description": "Development of custom Shopify apps to add unique features to your online store."
    },
    {
      "@type": "Offer",
      "name": "Shopify Theme Customization",
      "description": "Customization of Shopify themes to match your brand identity and improve user experience."
    },
    {
      "@type": "Offer",
      "name": "Shopify REST to GraphQL Migration",
      "description": "Migrate your Shopify integrations from REST API to modern GraphQL API for better performance."
    }
  ]
};
